  <%= form_for(@article) do |f| %>
      <%= f.label :titre %>
      <%= f.text_field :titre %>
      <%= f.label :date, 'Date sur timeline' %>
      <%= f.date_field :date %>
      <%= f.label :placename, "Ajoutez le lieu où votre article sera présent sur la carte" %>
      <%= f.text_field :placename %>
      <%= f.label :content, "Contenu de l'article" %>
      <%= f.text_area :content %>
      <%= f.label :place, "Ajoutez le lieu et la date de votre article (lieu - année)" %>
      <%= f.text_field :place %>
      <%= f.label :notion_ids, "Ajoutez les notions abordées par votre article (clic + cmd pour ajouter plusieurs)" %>
      <% notions_array = Notion.all.map { |notion| [notion.name, notion.id] } %>
      <%= f.select :notion_ids, options_for_select(notions_array, @article.notion_ids), {}, {:multiple => true} %>
      <%= f.label :photo, "Ajoutez votre photo" %>
      <%= f.file_field :photo %>
      <%= f.label :legende, "Ajoutez la légende de votre photo" %>
      <%= f.text_field :legende %>
        <div class='button green'>
            <%= f.submit :submit %>
        </div>
  <% end %>
